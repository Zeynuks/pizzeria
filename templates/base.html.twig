<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
    <main class="main">
        <div class="navigation">
            <a href="/#" class="navigation-logo">
                <img class="navigation-logo__logo" src="{{ asset('images/icon/logo.svg') }}" alt="pizzeria_logo">
            </a>
            <nav class="navigation__menu">
                <li class="navigation__item"><a href="/home" class="navigation__link"><img class="navigation__icon" src="{{ asset('images/icon/navigation/home.svg') }}" alt="">Home</a></li>
                <li class="navigation__item"><a href="/menu" class="navigation__link"><img class="navigation__icon" src="{{ asset('images/icon/navigation/shop.svg') }}" alt="">Menu</a></li>
                <li class="navigation__item"><a href="/history" class="navigation__link"><img class="navigation__icon" src="{{ asset('images/icon/navigation/clock.svg') }}" alt="">History</a></li>
                <li class="navigation__item"><a href="/report" class="navigation__link"><img class="navigation__icon" src="{{ asset('images/icon/navigation/graph.svg') }}" alt="">Reports</a></li>
                <li class="navigation__item"><a href="/alert" class="navigation__link"><img class="navigation__icon" src="{{ asset('images/icon/navigation/notification-bing.svg') }}" alt="">Alerts</a></li>
                <li class="navigation__item"><a href="/settings" class="navigation__link"><img class="navigation__icon" src="{{ asset('images/icon/navigation/setting.svg') }}" alt="">Settings</a></li>
            </nav>
            {{ include('temp/_user.twig', sandboxed = true) }}
        </div>
        <section class="content">
            {% block body %}{% endblock %}
        </section>
    </main>

    </body>
</html>

